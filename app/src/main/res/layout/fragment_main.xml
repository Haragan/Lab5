<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.garkin.laban5.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:layout_x="88dp"
        android:layout_y="114dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextMiddleName"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_x="88dp"
        android:layout_y="221dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tvIdPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:layout_y="73dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_x="23dp"
        android:layout_y="230dp"
        android:text="Фамилия" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_x="37dp"
        android:layout_y="125dp"
        android:text="Имя" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_x="88dp"
        android:layout_y="320dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tvMiddleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:layout_x="26dp"
        android:layout_y="338dp"
        android:text="Отчество" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_x="27dp"
        android:layout_y="420dp"
        android:text="ОБНОВИТЬ" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="141dp"
        android:layout_y="437dp"
        android:text="УДАЛИТЬ" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_x="257dp"
        android:layout_y="443dp"
        android:text="СОЗДАТЬ" />

</AbsoluteLayout>
